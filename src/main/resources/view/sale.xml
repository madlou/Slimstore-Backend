<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mongo="http://www.springframework.org/schema/data/mongo"
  xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean class="com.tjx.lew00305.slimstore.model.View">
        <property name="name" value="sale" />
        <property name="title" value="Non-Merch Sale" />
        <property name="message" value="Please select option to buy." />
        <property name="formProcess" value="AddToBasket" />
        <property name="formSuccess" value="home" />
        <property name="formElements">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="product" />
                    <property name="key" value="101" />
                    <property name="label" value="Rare Cat" />
                    <property name="image" value="https://loremflickr.com/200/200?random=101" />
                    <property name="value" value="0" />
                    <property name="price" value="100" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="product" />
                    <property name="key" value="102" />
                    <property name="label" value="Secret Cat" />
                    <property name="image" value="https://loremflickr.com/200/200?random=102" />
                    <property name="value" value="0" />
                    <property name="price" value="2.99" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="product" />
                    <property name="key" value="103" />
                    <property name="label" value="Hidden Cat" />
                    <property name="image" value="https://loremflickr.com/200/200?random=103" />
                    <property name="value" value="0" />
                    <property name="price" value="100.99" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="product" />
                    <property name="key" value="104" />
                    <property name="label" value="Forbidden Cat" />
                    <property name="image" value="https://loremflickr.com/200/200?random=104" />
                    <property name="value" value="0" />
                    <property name="price" value="99.99" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="product" />
                    <property name="key" value="105" />
                    <property name="label" value="Ultimate Cat" />
                    <property name="image" value="https://loremflickr.com/200/200?random=105" />
                    <property name="value" value="0" />
                    <property name="price" value="250.99" />
                </bean>
            </array>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="1" />
                    <property name="label" value="Add" />
                    <property name="action" value="submit" />   
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="action" value="home" />   
                </bean>
            </array>
        </property>
    </bean>

</beans>
