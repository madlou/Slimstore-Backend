<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mongo="http://www.springframework.org/schema/data/mongo"
    xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean class="com.tjx.lew00305.slimstore.model.View">
        <property name="name" value="tender/giftcard" />
        <property name="title" value="Tender Gift Card" />
        <property name="message" value="Please swipe/scan Gift Card." />
        <property name="formProcess" value="ProcessGiftcard" />
        <property name="formSuccess" value="tender" />
        <property name="formElements">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="number" />
                    <property name="key" value="card" />
                    <property name="label" value="Card Number" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="number" />
                    <property name="key" value="pin" />
                    <property name="label" value="PIN Number" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="decimal" />
                    <property name="key" value="amount" />
                    <property name="label" value="Amount" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="submit" />
                    <property name="value" value="Redeem Gift Card" />
                </bean>

            </array>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="action" value="tender" />
                </bean>
            </array>
        </property>
    </bean>

</beans>
